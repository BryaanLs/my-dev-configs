echo "for the first run, you need install jq --> sudo apt install jq -y"
echo "Write work folder name:"
read folder

mkdir $folder
cd $folder
npm init -y
npm install nodemon

jq '.scripts.start = "nodemon index.js" | .type = "module"' package.json > tmp.json && mv tmp.json package.json

touch index.js
echo "console.log('Let's go code!')" > index.js
code .
clear
npm start
        